<!-- views/faq.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="/js/script.js" defer></script> 
    <title>FAQ - The Barber Hub</title>
</head>
<body>
    <%- include('./partials/_navbar.ejs') %>

    <div class="faq-container">
        <h1 class="faq-title">Frequently Asked Questions</h1>
        
        <div class="faq-item">
            <h2 class="faq-question">How do I sign up?</h2>
            <p class="faq-answer">Click on the <a href="/auth/sign-up">Sign Up</a> button in the navigation bar. Fill in your details, and you’re all set!</p>
        </div>

        <div class="faq-item">
            <h2 class="faq-question">Can I edit my client's information?</h2>
            <p class="faq-answer">Yes! Go to <a href="/users/<%= user ? user._id : '#' %>/profile">Your Profile</a>, find the client, and click “Edit.”</p>
        </div>

        <div class="faq-item">
            <h2 class="faq-question">What if I forget my password?</h2>
            <p class="faq-answer">We don't have password recovery yet, but you can contact us on the <a href="/contact">Contact</a> page.</p>
        </div>

        <div class="faq-item">
            <h2 class="faq-question">How do I delete a client?</h2>
            <p class="faq-answer">Go to your client list, click on a client, and hit “Delete.” This action **cannot** be undone.</p>
        </div>

        <div class="faq-item">
            <h2 class="faq-question">What's the best way to track appointments?</h2>
            <p class="faq-answer">You can add appointment dates in the client profile and keep notes for each client!</p>
        </div>
    </div>

    <%- include('./partials/_footer.ejs') %>
</body>
</html>