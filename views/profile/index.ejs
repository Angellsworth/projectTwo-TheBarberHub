<!-- views/profile/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="/js/script.js" defer></script> 
  <title><%= user.name %>'s Profile</title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %> <!-- Navbar added here -->
    <h1>Welcome, <%= user.name %>!</h1>
    <p><strong>Username:</strong> <%= user.username %></p>
    <p><strong>Current Shop:</strong> <%= user.currentShop %></p>
    <p><strong>Specialties:</strong> <%= user.specialties.join(', ') %></p>
    <p><strong>Experience:</strong> <%= user.experience %> years</p>
  
    <a href="/users/<%= user._id %>/profile/edit">Edit Profile</a>
    <a href="/users/<%= user._id %>/profile/new">Add a New Client</a>
<!-- Display Clients -->
<h2>Your Clients</h2>
<% if (user.clients.length > 0) { %>
  <ul>
    <% user.clients.forEach(client => { %>
      <li>
        <!-- Link each client to their show page -->
        <a href="/users/<%= user._id %>/profile/clients/<%= client._id %>">
          <strong>Name:</strong> <%= client.name ? client.name : 'Unknown' %>
        </a>
        <br>
        <strong>Appointments:</strong>
        <% if (client.appointments && client.appointments.length > 0) { %>
          <ul>
            <% client.appointments.forEach(appointment => { %>
              <li><%= new Date(appointment).toLocaleDateString() %></li>
            <% }); %>
          </ul>
        <% } else { %>
          No appointments yet.
        <% } %>
        <br>
        <strong>Preferred Cut:</strong> <%= client.cutsReceived ? client.cutsReceived : 'N/A' %> <br>
        <strong>Beard Preference:</strong> 
        <% if (client.beardPreference === 'none') { %> No Beard 
        <% } else if (client.beardPreference === 'Beard, but no Trim') { %> Beard, but no Trim
        <% } else if (client.beardPreference === 'Beard Trim') { %> Beard Trim 
        <% } else if (client.beardPreference === 'Beard Trim and Shave') { %> Beard Trim and Shave 
        <% } else { %> N/A <% } %>
        <br>
        <strong>Waxing:</strong> <%= client.getsWaxing ? 'Yes' : 'No' %> <br>
        <strong>Waxing Areas:</strong> <%= client.waxingAreas ? client.waxingAreas : 'None' %> <br>
        <strong>Notes:</strong> <%= client.notes ? client.notes : 'No notes' %>
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <p>No clients yet.</p>
<% } %>
    <%- include('../partials/_footer.ejs') %>
  </body>
</html>